<h1>Listado de Articulos</h1>
<table border="1">
    <tr>
        <th>ID</th>
        <th>Titulo</th>
        <th>Autor</th>
        <th>Fecha de Creacion</th>
        <th>Comentarios</th>
    </tr>
    {% for articulo in articulos %}
    <tr>
        <td>{{ articulo.id }}</td>
        <td>{{ articulo.title }}</td>
        <td>{{ articulo.author  }}</td>
        <td>{{ articulo.created | date('d-m-Y') }}</td>
        {% for comentario in comentarios %}
            {% if comentario.article.id == articulo.id %}
                <td>{{ comentario.content }}</td>
            {% endif %} 
        {% endfor %}
    </tr>
    {% endfor %}
</table>
